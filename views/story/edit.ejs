<%- include('../partials/header.ejs')%>
<div class="content">
    <form class="form-horizontal align-items-center" method="POST" action="/trade/<%= mobile.id%>?_method=PUT">
        <table class="form-center">
            <div class="form-group">
                <label class="control-label col-sm-2">Company Name:</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" name="company" value="<%= mobile.company %>" required>
                </div>
              </div>
            
              <div class="form-group">
                <label class="control-label col-sm-2">Model:</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" name="name" value="<%= mobile.name %>" required>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-sm-2">Battery:</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" name="battery" value="<%= mobile.battery %>" required>
                </div>
              </div>
          
              <div class="form-group">
                <label class="control-label col-sm-2">Memory:</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" name="memory" value="<%= mobile.memory %>" required>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-sm-2">Color:</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" name="color" value="<%= mobile.color %>" required>
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-sm-2">Details:</label>
                <div class="col-sm-5">
                <textarea class="form-control" rows="5" name="details" required><%= mobile.details %></textarea>
                </div>
              </div>
          
              <div class="form-group">
                  <label class="control-label col-sm-2">Image URL:</label>
                  <div class="col-sm-5">
                    <input type="text" class="form-control" name="image" value="<%= mobile.image %>" required> 
                  </div>
                </div>


                <div class="form-group">
                <div colspan="2" class="col-sm-offset-2 col-sm-10">
                  <button class="btn btn-secondary">Update</button>
                </div>
              </div>
            </tr>
        </table>
    </form>
</div>

<%- include('../partials/footer.ejs')%>