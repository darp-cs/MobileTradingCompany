<%- include('../partials/header.ejs') %>
  <div class="form-center">
  <form class="form-horizontal align-items-center" action="/trade" method ="Post">
    <div class="form-group">
      <label class="control-label col-sm-2">Company Name:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="company" required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Model:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="name" required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Color:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="color" required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Battery:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="battery"required>
      </div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-2">Memory:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="memory"required>
      </div>
    </div>
    
    <div class="form-group">
      <label class="control-label col-sm-2">Details:</label>
      <div class="col-sm-5">
      <textarea class="form-control" rows="5" name="details" required minlength="10"></textarea>
      </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">Image URL:</label>
        <div class="col-sm-5">
          <input type="text" class="form-control" name="image" required>
        </div>
      </div>

    <div class="col-sm-offset-2 col-sm-10">
    <button type="submit" class="btn btn-success">Add New Trade</button>
    </div>

  </form>
  </div>


<%- include('../partials/footer.ejs') %>